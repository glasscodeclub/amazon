<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/3bb9d2c9bc.js" crossorigin="anonymous"></script>
  <!-- Glidejs -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.core.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.theme.css">

  <!-- Custom StyleSheet -->
  <link rel="stylesheet" href="../../public/css/home.css" />
  <link rel="stylesheet" href="../../public/css/details.css" />



  
  

</head>

<body>

  <%- include("../partials/nav.ejs") %>
  <section class="section promotion">
    
    <div class="containerr">
        <div class="titlee">
            <h2>Order Details</h2>
        </div>
        <div class="d-flex">

                    <div class="form-steps my-nav">
						<div class="form-steps__item form-steps__item--active">
							    <div class="form-steps__item-content">
                    <span class="form-steps__item-icon"></span>
								<span class="form-steps__item-text">Order Placed</span>
                                <div class="form-steps__item-text"><%=order.orderDate%></div>
							</div>

						</div>
                      <%if(order.status != "Delivered"){%>
                        <div class="form-steps__item ">
                            <div class="form-steps__item-content">
                              <span class="form-steps__item-icon"></span>
                              <span class="form-steps__item-line"></span>
                              <span class="form-steps__item-text">On The Way</span>
                              <div class="form-steps__item-text">Expected - <%=order.deliveryDate%></div>
                            </div>
                        </div> 
                      <%}%>

                          <div class="form-steps__item">
                            <div class="form-steps__item-content">
                              <span class="form-steps__item-icon"></span>
                              <span class="form-steps__item-line"></span>
                              <span class="form-steps__item-text"><%=order.status%></span>
                                              <div class="form-steps__item-text"><%=order.deliveryDate%></div>
                            </div>
                          </div>

                                <!-- REPLACE THIS CODE WHEN THAT LINE IS COMPLETE  -->

                                <!-- ACTIVE is current completed gives tick and else normal  -->
                            <!-- <div class="form-steps__item form-steps__item--completed">
                                <div class="form-steps__item-content">
                                  <span class="form-steps__item-icon">2</span>
                                  <span class="form-steps__item-line"></span>
                                  <span class="form-steps__item-text">Delivery</span>
                                </div>
                                </div> -->
                        </div>

           
                    <%order.items.forEach(function(item){%>
                    <section class="section product-detail">
                        <div class="details container">
                          <div class="left">
                            <div class="main" style="margin-left: 1em;">
                              <img  src="<%=item.image%>" alt="" />
                            </div>
                            
                          </div>
                          <div class="right r-detail" >
                            
                            <h1><%=item.itemname%></h1>
                            <h3 class="dis-in">Price :</h3>
                            <div class="price"><%=item.price%></div>
                                 
                            <br>
                            <div class="order-id" style="margin-left: 0em;" >
                                <h3 class="dis-in">Quantity :</h3>
                                <p class="dis-in-pad">
                                  <%=item.quantity%>
                                </p>
                                </div>

                            <br>

                            <div  class="order-id" >
                            <h3 class="dis-in" >Order ID :</h3>
                            <p class="dis-in-pad">
                              <%=order._id%>
                            </p>
                            </div>

                                <div  class="order-id" style="margin-left: 1em;" >
                                <h3 class="dis-in" >Expected Date :</h3>
                                <p class="dis-in-pad">
                                  <%=order.deliveryDate%>
                                </p>
                                </div>
         

                            <!-- <h3 class="last-h3">Product Detail</h3>
                            <p >
                              Lorem ipsum dolor sit amet consectetur adipisicing elit. Vero minima
                              delectus nulla voluptates nesciunt quidem laudantium, quisquam
                              voluptas facilis dicta in explicabo, laboriosam ipsam suscipit!
                            </p> -->

                            <div  class="order-idd" >
                                <h3 class="dis-in" >Payment Method :</h3>
                                <p class="dis-in-pad">
                                  <%=order.payment%>
                                </p>
                                </div>
                          </div>
                        </div>
                      </section>
                      <%})%>



                      <form class="form-ship" action="#" method="post">
                        <div class="row">
                          <div class="col">
                            <h3>Shipping Address</h3>
                          </div>
                        </div>
                        
                        <div class="row">
                          <div class="col">
                            <label for="firstName">First name</label>
                            <input type="text" id="firstName"  value="<%=order.address.firstname%>" readonly/>
                          </div>
                          <div class="col">
                            <label for="lastName">Last name</label>
                            <input type="text" id="lastName" value="<%=order.address.lastname%>" readonly/>
                          </div>
                        </div>
                        
                        <div class="row">
                          <div class="col">
                            <label for="address">Address</label>
                            <input type="text" id="address" value="<%=order.address.line%>" readonly/>
                          </div>
                        </div>
                        
                        <div class="row">
                          <div class="col">
                            <label for="city">City</label>
                            <input type="text" id="city" value="<%=order.address.city%>" readonly/>
                          </div>
                          <div class="col">
                            <label for="country">Country</label>
                            <input type="text" id="country" value="<%=order.address.country%>" readonly/>
                          </div>
                        </div> 

                        <div class="row">
                            <div class="col">
                              <label for="city">Postal Code</label>
                              <input type="text" id="city" value="<%=order.address.postal%>" readonly/>
                            </div>
                            <div class="col">
                              <label for="country">Phone No.</label>
                              <input type="text" id="country" value="<%=order.address.phone%>" readonly/>
                            </div>
                          </div> 


                          <div class="row">
                            <div class="col">
                              <label for="address">E-mail</label>
                              <input type="text" id="address" value="<%=order.address.email%>" readonly/>
                            </div>
                          </div>
                          <br>
                        
                        
                        
                        
                        <!-- end .hide -->
                      
                      </form>



                      
                   

         </div>
           

 
        </div>
     
  </section>
  <%- include("../partials/allfooter.ejs") %>