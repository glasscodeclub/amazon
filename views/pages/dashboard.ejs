<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/3bb9d2c9bc.js" crossorigin="anonymous"></script>
  <!-- Glidejs -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.core.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Glide.js/3.4.1/css/glide.theme.css">

  <!-- Custom StyleSheet -->
  <link rel="stylesheet" href="../../public/css/home.css" />
</head>

<body>

  <!-- Navigation -->
  <nav class="nav">
    <div class="wrapper container">
      <div ><a href=""><img class="brand-logo" src="../../public/img/logo.png" alt="logo"></a></div>
      <ul class="nav-list">
        <div class="top">
          <label for="" class="btn close-btn"><i class="fas fa-times"></i></label>
        </div>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="">Services</a></li>
        <li>
          <a href="" class="desktop-item">Shop <span><i class="fas fa-chevron-down"></i></span></a>
          <input type="checkbox" id="showMega" />
          <label for="showMega" class="mobile-item">Shop <span><i class="fas fa-chevron-down"></i></span></label>
          <div class="mega-box">
            <div class="content">
              <div class="row">
                <img src="../../public/img/woman.jpg" alt="" />
              </div>
              <div class="row">
                <header>Trending</header>
                  <ul class="mega-links">
                    <li><a href="#">New Releases</a></li>
                    <li><a href="#">Best Sellers</a></li>
                    <li><a href="#">Today's Deals</a></li>
                    
                  </ul>
              </div>
              <div class="row">
                <header>Shop by Department</header>
                <ul class="mega-links">
                  <li><a href="#">Fashion</a></li>
                  <li><a href="#">Mobiles</a></li>
                  <li><a href="#">Furniture</a></li>
                  <li><a href="#">Grocery</a></li>
                </ul>
              </div>
              <div class="row">
                <header>Discover</header>
                <ul class="mega-links">
                  <li><a href="#">Gift Cards</a></li>
                  <li><a href="#">Brands</a></li>
                  <li><a href="#">Sell on Amazon</a></li>
                  <li><a href="#">Coupns</a></li>
                </ul>
              </div>
            </div>
          </div>
        </li>
        <li><a href="">Returns</a></li>
        <li>
          <a href="" class="desktop-item">Vendors <span><i class="fas fa-chevron-down"></i></span></a>
          <input type="checkbox" id="showdrop1" />
          <label for="showdrop1" class="mobile-item">Vendors <span><i class="fas fa-chevron-down"></i></span></label>
          <ul class="drop-menu1">
            <li><a href="">Vendor Store listings</a></li>
            <li><a href="">Store Details</a></li>
          </ul>
        </li>

        <li>
          <a href="" class="desktop-item">Page <span><i class="fas fa-chevron-down"></i></span></a>
          <input type="checkbox" id="showdrop2" />
          <label for="showdrop2" class="mobile-item">Page <span><i class="fas fa-chevron-down"></i></span></label>
          <ul class="drop-menu2">
            <li><a href="">About</a></li>
            <li><a href="">Contact</a></li>
            <li><a href="">Faq</a></li>
            <li><a href="">Page 404</a></li>
          </ul>
        </li>
        <!-- icons -->
        <li class="icons">
          <a href="/cart/shopping-cart"><span>
            <img src="../../public/img/shoppingBag.svg" alt="" />
          </span></a>
          <!-- <img src="../../public/img/search.svg" alt="" /> -->
          <span >

            
              <form action="/search"> 
                      <input class="searchBox search-input " type="text"
                      placeholder=" Search ..."
                      name="search">
                      <button class="searchBox search-button "> 
                        <i class="fa fa-search icon-colour"
                            style="font-size: 18px;"> 
                        </i> 
                    </button>
              </form>
            

          </span>

          <span ><%= currentUser.username %></span>
          <span><a href="/auth/logout"><i class="fa fa-sign-out"></i></a></span>
        </li>
      </ul>
      <label for="" class="btn open-btn"><i class="fas fa-bars"></i></label>
    </div>
  </nav>

  <div class="hero">
    <div class="left">
      <span>Exclusive Sales</span>
      <h1>UP TO 50% OFF ON SALES</h1>
      <small>Get all exclusive offers for the season</small>
      <a href="">View Collection </a>
    </div>
    <div class="right">
      <img src="../../public/img/hero.png" alt="" />
    </div>
  </div>

  <!-- Promotion -->
  <section class="section promotion">
    <div class="title">
      <h2>Shop Collections</h2>
      <span>Select from the premium product and save plenty money</span>
    </div>

    <div class="promotion-layout container">
      <%categories.forEach(function(category){%>
        
        <div class="promotion-item">
            <img src="<%= category.image %>" alt="" />
            <div class="promotion-content">
          
                <h3><%= category.name %></h3>
            
            
              <a href="/dashboard/<%= category._id%>">SHOP NOW</a>
            </div>
          </div>
        <% }) %>

      
    </div>
  </section>

  <!-- Products -->
  <section class="section products">
    <div class="title">
      <h2>Today's Deals</h2>
      <span>Select from the premium product brands and save plenty money</span>
    </div>

    <div class="product-layout">

        <%data.forEach(function(product){%>
            <div class="product">
            <div class="img-container">
                <img src="<%=product.imageURL%>" alt="">
                <div class="addCart">
                    
                      <form method="POST" action="/cart/add/<%= product._id%>">
                        <div class="form-group">
                          <input type="hidden" name="product_id" id="quantity" value="<%= product._id %>"></input>
                          <input type="hidden" name="quantity" id="quantity" value="1"></input>
                          <input type="hidden" name="price" id="priceHidden" value="<%= product.price %>"></input>
                          <input type="hidden" name="image" id="image" value="<%= product.imageURL %>"></input>
                          <input type="hidden" name="name" id="name" value="<%= product.name %>"></input>
                        </div>
                          <button type="submit" class="btn btn-cart btn-primary btn-lg"><i class="fas fa-shopping-cart"></i></button>
                      </form>

                  </div>
        
                  <ul class="side-icons">
                    <span><i class="fas fa-search"></i></span>
                    <span><i class="far fa-heart"></i></span>
                    <span><i class="fas fa-sliders-h"></i></span>
                  </ul>

                  <div class="bottom">
                    <a href=""><%=product.name%></a>
                    <div class="price">
                      <span><%=product.price%></span>
                    </div>
                  </div>
                
                </div>
                </div>
        <%})%>
        
    </div>
  </section>

  <!-- ADVERT -->
  <section class="section advert">
    <div class="advert-layout container">
      <div class="item ">
        <img src="../../public/img/promo7.jpg" alt="">
        <div class="content left">
          <span>Exclusive Sales</span>
          <h3>Spring Collections</h3>
          <a href="">View Collection</a>
        </div>
      </div>
      <div class="item">
        <img src="../../public/img/promo8.jpg" alt="">
        <div class="content  right">
          <span>New Trending</span>
          <h3>Designer Bags</h3>
          <a href="">Shop Now </a>
        </div>
      </div>
    </div>
  </section>



  <%- include("../partials/allfooter.ejs") %>