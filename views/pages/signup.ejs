<%- include("../partials/header.ejs") %>
<link rel="stylesheet" href="../../public/css/signup.css" type="text/css">
<div class="box">
  <nav class="navbar navbar-expand-sm navbar-primary bg-primary">
    <h4><a class=" d-inline-flex  text-white" href="/home"><i class="fas fa-home"></a></i></h4>
  </nav>
    <main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
      <div class="container">
        <div class="card login-card">
          <div class="row no-gutters">
            <div class="col-md-7">
              <div class="card-body">
                <div class="d-flex align-items-start justify-content-start brand-wrapper">
                  <a class="text-white btn-css float-right btn btn-primary btn-block " href="/auth/login">Log In</a>
                </div>
                <div class="box-css">
                <p class="login-card-description">New Here ?</p>
                <form method="POST" action="/auth/signup">
                    <div class="form-group">
                      <label class="sr-only">Username</label>
                      <input type="text" name="username"  class=" rounded-pill form-control" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label class="sr-only">Email</label>
                        <input type="email" name="email"  class=" rounded-pill form-control" placeholder="Email">
                      </div>
                    <div class="form-group mb-4">
                      <label for="password" class="sr-only">Password</label>
                      <input type="password" name="password" class=" rounded-pill form-control" placeholder="Password">
                    </div>
                    <button type="submit" class=" btn-shadow btn  btn-block rounded-pill login-btn mb-4" > Sign Up </button>
                  </form>
                </div>
              </div>
            </div>
            <div class="  clr-bg col-md-5 " >
                <img class="img-fluid img-css" src="../../public/img/login-secure_login.svg" alt="login" class="login-card-img">
              </div>
          </div>
        </div>
      </div>
    </main>
    <%- include("../partials/footer.ejs") %>
  </div>

